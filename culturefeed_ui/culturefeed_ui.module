<?php

/**
 * @file
 * Contains culturefeed_ui.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 *
 * @param $route_name
 * @param \Drupal\Core\Routing\RouteMatchInterface $route_match
 * @return string
 */
function culturefeed_ui_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the culturefeed_ui module.
    case 'help.page.culturefeed_ui':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('CultureFeed UI') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function culturefeed_ui_theme() {
  $theme = [
    'culturefeed_ui_profile' => array(
      'variables' => array(
        'user' => NULL,
        'title' => NULL,
        'edit_profile_link' => NULL,
        'edit_profile_title' => NULL,
      ),
    ),
    'culturefeed_ui_profile_form' => array(
      'render element' => 'form',
    ),
    'culturefeed_ui_account_form' => array(
      'render element' => 'form',
    ),
    'culturefeed_ui_profile_menu_item' => array(
      'variables' => array('title' => '', 'url' => '', 'description' => ''),
    ),
    'culturefeed_ui_connected_account' => array(
      'variables' => array(
        'account' => NULL,
        'accountType' => NULL,
        'publishLink' => '',
        'disconnectLink' => '',
        'connectLink' => '',
        'privacyStatement' => ''
      ),
    ),
  ];

  return $theme;
}

  switch ($delta) {

    case 'culturefeed-userpoints-balance':
      $block['subject'] = 'Mijn puntensaldo';
      $block['content'] = culturefeed_userpoints_ui_block_balance();
      break;

    case 'culturefeed-userpoints-more':

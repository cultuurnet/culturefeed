  $form = array();

  if ($delta == 'newsletter_form') {

    $form['uitid_light'] = array(
      '#title' => t('UiTiD Light settings.'),
      '#type' => 'fieldset',
      '#access' => CULTUREFEED_API_LIGHT_ID_ALLOWED,

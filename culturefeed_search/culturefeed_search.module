// Default cdb schema version.  Can be overridden in settings form.
define('CULTUREFEED_SEARCH_CDB_DEFAULT_VERSION', '3.2');

// Default proximity search range.
define('CULTUREFEED_SEARCH_DEFAULT_PROXIMITY_RANGE', 20);

